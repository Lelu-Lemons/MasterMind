@using Components.ViewModels
@inherits GameBoardVM


<MudContainer Style="border: 4px ridge darkblue; height: 100%; background-color: rgba(47, 79, 79, 0.7); opacity: 1; margin-top: 12vh;">
	<MudStack Row="true" Spacing="0" Justify="Justify.Center" AlignItems="AlignItems.Center">
		<MudStack Spacing="0" Justify="Justify.Center" AlignItems="AlignItems.Center">
			<MudStack Row="true" Style="margin-top: 10px;" Justify="Justify.Center" Spacing="2">
				@if (!AccessibilityOn)
				{
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(1)"
						Style="background-color: darkcyan; color:aqua;" />
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(2)"
						Style="background-color: rgb(154, 156, 33); color: rgb(233, 235, 73);" />
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(3)"
						Style="background-color: rgb(140, 52, 55); color: rgb(250, 120, 125);" />
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(4)"
						Style="background-color: rgb(108, 41, 135); color:rgb(213, 120, 250);" />
				}
				@if (AccessibilityOn)
				{
					var styleString = "background-color: rgb(64, 176, 166); color: rgb(225, 190, 106); min-height: 48px; height: 48px max-width: 48px; min-width: 48px; border-radius: 100%;";
					<MudButton Style="@styleString" OnClick="() => SetChoice(1)">
						<MudText Typo="Typo.h5">1</MudText>
					</MudButton>
					<MudButton Style="@styleString" OnClick="() => SetChoice(2)">
						<MudText Typo="Typo.h5">2</MudText>
					</MudButton>
					<MudButton Style="@styleString" OnClick="() => SetChoice(3)">
						<MudText Typo="Typo.h5">3</MudText>
					</MudButton>
					<MudButton Style="@styleString" OnClick="() => SetChoice(4)">
						<MudText Typo="Typo.h5">4</MudText>
					</MudButton>
				}
			</MudStack>
			<MudStack Row="true" Style="margin-top: 10px; margin-bottom: 10px;" Justify="Justify.Center" Spacing="2">
				@if (!AccessibilityOn)
				{
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(5)"
						Style="background-color: rgb(156, 54, 141); color:rgb(247, 116, 228);" />
					<MudIconButton
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(6)"
						Style="background-color: rgb(17, 2, 158); color: rgb(59, 38, 255);" />
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(7)"
						Style="background-color: rgb(42, 130, 54); color: rgb(100, 245, 120);" />
					<MudIconButton 
						DisableRipple="true" Icon="@Icons.Material.Filled.Lightbulb" OnClick="() => SetChoice(8)"
						Style="background-color: rgb(163, 109, 8); color: rgb(255, 179, 36);" />
				}
				@if (AccessibilityOn)
				{
					var styleString = "background-color: rgb(64, 176, 166); color: rgb(225, 190, 106); min-height: 48px; height: 48px max-width: 48px; min-width: 48px; border-radius: 100%;";
					<MudButton Style="@styleString" OnClick="() => SetChoice(5)">
						<MudText Typo="Typo.h5">5</MudText>
					</MudButton>
					<MudButton Style="@styleString" OnClick="() => SetChoice(6)">
						<MudText Typo="Typo.h5">6</MudText>
					</MudButton>
					<MudButton Style="@styleString" OnClick="() => SetChoice(7)">
						<MudText Typo="Typo.h5">7</MudText>
					</MudButton>
					<MudButton Style="@styleString" OnClick="() => SetChoice(8)">
						<MudText Typo="Typo.h5">8</MudText>
					</MudButton>
				}
			</MudStack>
		</MudStack>
	</MudStack>
</MudContainer>
